<Window x:Class="EasySave.view.wpf.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:translation="clr-namespace:EasySave.translation"
        xmlns:viewModel="clr-namespace:EasySave.viewmodel"
        mc:Ignorable="d"
        Height="800" Width="1200"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.DataContext>
        <viewModel:MainViewModel></viewModel:MainViewModel>
    </Window.DataContext>
        
    <Border Background="#272537"
            CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <StackPanel Margin="15"
                            Orientation="Horizontal">
                    <Image Source="/view/wpf/images/logo.png"
                           Width="50"
                           Height="50"></Image>
                    
                    <TextBlock Text="EasySave"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="20, 0, 0, 0"
                               Foreground="White"
                               FontSize="22"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="15">
                    
                    <RadioButton Content="{x:Static translation:strings.Backups}"
                                 Tag="../images/backups.png"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 IsChecked="True"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding OnNavigateToBackups}"/>
                
                    <RadioButton Content="{x:Static translation:strings.Settings}"
                                 Tag="../images/settings.png"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding OnNavigateToSettings}"/>
                    
                </StackPanel>
                
                <TextBox Width="250"
                         Height="40"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="5"
                         Style="{StaticResource ModernTextBox}"
                         Grid.Row="0" Grid.Column="1"/>
                
                <ContentControl Grid.Row="1"
                                Grid.Column="1"
                                Margin="10"
                                Content="{Binding CurrentViewModel}"></ContentControl>
            </Grid>
        </Border>
</Window>
