<UserControl x:Class="EasySave.view.wpf.windows.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:translation="clr-namespace:EasySave.translation"
             xmlns:viewModel="clr-namespace:EasySave.viewmodel"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewModel:SettingsViewModel></viewModel:SettingsViewModel>
    </UserControl.DataContext>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
                
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static translation:strings.Preferences}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="20, 0, 0, 0"
                   Foreground="White"
                   FontSize="30"/>
        
        <Border Width="400"
                Height="200"
                Grid.Row="1" Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <GradientStop Color="#5bc3ff" Offset="0.0"></GradientStop>
                    <GradientStop Color="#3aa0ff" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        
            <Border.Clip>
                <RectangleGeometry RadiusX="10"
                                   RadiusY="10"
                                   Rect="0, 0, 400, 200"/>
            </Border.Clip>
        
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static translation:strings.Language}"
                           Foreground="White"
                           FontSize="28"
                           Margin="20, 10, 0, 0"></TextBlock>

                <ItemsControl Grid.Row="1">
                    <RadioButton Tag="../images/flag_en.png"
                                 Width="50"
                                 Height="40"
                                 Foreground="White"
                                 FontSize="14"
                                 IsChecked="True"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding OnSelectEnglish}"/>
        
                    <RadioButton Tag="../images/flag_fr.png"
                                 Width="50"
                                 Height="40"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding OnSelectFrench}"/>
                </ItemsControl>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Grid.Column="1" Width="200"
                Height="200"
                CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <GradientStop Color="#ffc554" Offset="0.0"></GradientStop>
                    <GradientStop Color="#ffb73a" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <Border Grid.Row="2" Grid.Column="0" Width="200"
                Height="200"
                CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <GradientStop Color="#ffc554" Offset="0.0"></GradientStop>
                    <GradientStop Color="#ffb73a" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <Border Grid.Row="2" Grid.Column="1" Width="200"
                Height="200"
                CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <GradientStop Color="#ffc554" Offset="0"></GradientStop>
                    <GradientStop Color="#ffb73a" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
